/* pages/index/index.wxss */
/* 搜索 */
.header {
  display: flex;
  padding: 10rpx;
}
.header image{
  width: 60rpx;
  height: 60rpx;
}
.header .search {
  border: 1rpx solid #eee;
  margin: 0 10rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
  flex: 1;
}

/* 轮播图区域样式 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 导航区域样式 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  margin: 20rpx 0;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
  padding: 20rpx;
}

/* 推荐歌曲内容区域 */
.recommendScroll {
  display: flex;
  height: 300rpx;
}

.scrollItem {
  margin-right: 20rpx;
  width: 200rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /* 多行文本溢出隐藏 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical; /* 设置对齐模式 */
  -webkit-line-clamp: 2;  /* 设置多行行数 */
}

/* 排行榜  */
.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 400rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;

}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

